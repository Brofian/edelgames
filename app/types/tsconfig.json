{
	"declaration": true,
	"types": "index.d.ts",
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["es6"],
		"composite": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"types": [],
		"noEmit": true,
		"allowJs": false,
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "../",
		"typeRoots": ["../"],
		"outDir": "build"
	},
	"include": ["src"],
	"exclude": ["src/**/*.js"]
}
